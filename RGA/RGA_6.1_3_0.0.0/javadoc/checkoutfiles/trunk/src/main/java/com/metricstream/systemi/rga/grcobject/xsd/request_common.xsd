<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
       elementFormDefault="qualified">

       <xs:complexType name="metadataType">
              <xs:sequence>
                     <xs:element name="source" type="xs:string" minOccurs="1"
                           maxOccurs="1" />
                     <xs:element name="timestamp" type="xs:string" minOccurs="1"
                           maxOccurs="1" />
                     <xs:element name="version" type="xs:int" minOccurs="1"
                           maxOccurs="1" />
              </xs:sequence>
       </xs:complexType>

       <xs:complexType name="headerType">
              <xs:sequence>
                     <xs:element name="name" type="xs:string" maxOccurs="1"
                           minOccurs="1" />
                     <xs:element name="description" type="xs:string" maxOccurs="1"
                           minOccurs="1" />
                     <xs:element name="owner_organizations" type="organization_listType"
                           minOccurs="1" maxOccurs="1" />
                     <xs:element name="owners" type="userListType" maxOccurs="1"
                           minOccurs="1" />
                     <xs:element name="approvers" type="approverType"
                           minOccurs="0" maxOccurs="2" />
                     <xs:element name="restrict_access_to" type="xs:string"
                           maxOccurs="1" minOccurs="1" />
                     <xs:element name="valid_from" type="xs:string" maxOccurs="1"
                           minOccurs="0" />
                     <xs:element name="valid_until" type="xs:string" maxOccurs="1"
                           minOccurs="0" />
                     <xs:element name="action" type="xs:string" maxOccurs="1"
                           minOccurs="1" />
                     <xs:element name="action_comments" type="xs:string"
                           maxOccurs="1" minOccurs="1" />
              </xs:sequence>
       </xs:complexType>

       <xs:complexType name="relatedType">
              <xs:sequence>
                     <xs:element name="object_type" type="xs:string" maxOccurs="1"
                           minOccurs="0" />
                     <xs:element name="object_name" type="xs:string" maxOccurs="1"
                           minOccurs="0" />
                     <xs:element name="object_id" type="xs:string" maxOccurs="1"
                           minOccurs="0">
                     </xs:element>
                     <xs:element name="additional_details" type="xs:string"
                           maxOccurs="1" minOccurs="0">
                     </xs:element>
                     <xs:element type="xs:string" name="relationship_nature"
                           maxOccurs="1" minOccurs="0" />
                     <xs:element type="xs:string" name="comments" maxOccurs="1"
                           minOccurs="0" />
                     <xs:element type="stakeHolders" maxOccurs="1"
                           name="stake_holders" minOccurs="0" />
                     <xs:element type="xs:string" name="applicable_to"
                           maxOccurs="1" minOccurs="0" />
              </xs:sequence>
       </xs:complexType>
       
       <xs:complexType name="stakeHolders">
              <xs:sequence>
                     <xs:element name="stake_holder" type="xs:string"
                           maxOccurs="unbounded" minOccurs="0" />
              </xs:sequence>
       </xs:complexType>

       <xs:complexType name="approverType">
              <xs:sequence maxOccurs="1" minOccurs="1">
                     <xs:element name="users" type="xs:string" />
              </xs:sequence>
              <xs:attribute name="level" type="xs:string" />
       </xs:complexType>

       <xs:complexType name="userListType">
              <xs:sequence>
                     <xs:element name="user" type="xs:string" maxOccurs="unbounded"
                           minOccurs="0" />
              </xs:sequence>
       </xs:complexType>

       <xs:complexType name="organization_listType">
              <xs:sequence>
                     <xs:element name="organization" type="xs:string"
                           maxOccurs="unbounded" minOccurs="0" />
              </xs:sequence>
       </xs:complexType>

</xs:schema>
